

@{
    ViewData["Title"] = "Thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <h1 class="card-title">@ViewBag.Title</h1>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive">
        <table id="items" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Tên thành viên</th>
                    <th>Nhóm quyền</th>
                    <th>Truy cập gần nhất</th>
                    <th style="width: 40px"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@ViewBag.Title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="Item">
                    <input type="hidden" id="Id" name="Id" />
                    <div class="form-group">
                        <label for="Name">Tên thành viên</label>
                        <input type="text" class="form-control" id="Name" name="Name" />
                    </div>
                    <div class="form-group">
                        <label for="Picture">Hình đại diện</label>
                        <input type="file" class="form-control" id="Picture" name="Picture" />
                        <img id="user-picture" style="display: none" src="" />
                    </div>
                    <div class="form-group">
                        <label for="LoginName">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="LoginName" name="LoginName" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Mật khẩu</label>
                        <input type="password" class="form-control" id="Password" name="Password" />
                    </div>
                    <div class="form-group">
                        <label for="Email">Hộp thư điện tử</label>
                        <input type="email" class="form-control" id="Email" name="Email" />
                    </div>
                    <div class="form-group">
                        <label for="GroupId">Nhóm quyền</label>
                        <select id="GroupId" name="GroupId" class="form-control">
                            <option value="">--- Chọn ---</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary btnSave">Lưu</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
@section Css {
    <link href="/plugins/datatables-bs4/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    <link href="/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <style>
        div.dt-buttons {
            float: right;
        }

        img.user-picture {
            width: 32px;
            height: 32px;
        }
    </style>
}
@section Js {
    <script src="/plugins/datatables/jquery.datatables.min.js"></script>
    <script src="/plugins/datatables-bs4/js/datatables.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-buttons/js/datatables.buttons.min.js"></script>
    <script src="/plugins/toastr/toastr.min.js"></script>
    <script src="/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="/plugins/moment/moment.min.js"></script>

    <script>
        $(function () {
            var items = $("#items").DataTable({
                "dom": "Blfrtip",
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Admin/Member/GetList",
                    "type": "POST",
                    "dataType": "json",
                    


                    "error": function (xhr, error, code) {
                        toastr.error("Lỗi: Không có quyền truy cập chức năng này.");
                    }
                },
                "columns": [
                    {
                        "data": null, "render": function (data, type, row, meta) { return meta.row + 1; }
                    },
                    {
                        "data": "name"
                    },
                    {
                        "data": "groupName"
                    },
                    {
                        "data": "lastLogin", "render": function (data, type, row, meta) {
                            return moment(data).isValid() ? moment(data).format("HH:mm:ss -DD/MM/YYYY") : "Chưa đăng nhập";
                        }
                    },
                    {
                        "render": function (data, type, row, meta) {
                          
                           
                            let tool = '<div class="btn-group">' +
                                '<a href="#" data-toggle="dropdown" class="list-icons-item text-dark" aria-expanded="false">' +
                                '<i class="fas fa-sort-amount-down"></i>' +
                                '</a>' +
                                '<div class="dropdown-menu" role="menu" style="">' +
                                '<a class="dropdown-item text-primary btnEdit" href="#" data-id="' + row.maNv + '"><i class="fas fa-pencil-alt mr-3"></i>Cập nhật</a>' +
                                '<a class="dropdown-item text-danger btnDelete" href="#" data-id="' + row.maNv + '"><i class="fas fa-trash mr-3"></i>Xóa</a>' +
                                '</div>' +
                                '</div>';
                            return tool;
                        }
                    }
                ],
                "buttons": [
                    {
                        text: '<i class="fa fa-plus mr-2"></i>Thêm thành viên',
                        className: 'btn btn-info pb-1',
                        action: function (e, dt, node, config) {
                            $("#modal-default form#Item")[0].reset();
                            $("#Id").val("");
                            $("#user-picture").attr("src", '').hide();
                            $("#modal-default").modal('show');
                        }
                    }
                ]
            });
            $(document).on("click", "a.btnEdit", function () {
                let id = $(this).data("id");
                $.getJSON("/Admin/Member/GetItem",
                    {
                        id: id
                    }, function (item) {
                        console.log("Dữ liệu trả về từ server:", item);
                        $("#Id").val(item.maNv);
                        $("#Name").val(item.name);
                        $("#user-picture").attr("src", item.picture).show();
                        $("#LoginName").val(item.loginName);
                        $("#Email").val(item.email);
                        $("#GroupId").val(item.groupId).change();
                        $("#modal-default").modal('show');
                    }).fail(function () {
                        toastr.error("Lỗi: Không có quyền truy cập chức năng này.");
                    });
            })
            $.getJSON("/Admin/Group/getList",
                {},
                function (data) {
                    
                    data.forEach((item) => {
                        var o = new Option(item.name, item.groupId);
                        $("#GroupId").append(o);
                    })
                });
            $(".btnSave").click(function () {
                var form = $("#Item")[0];
                var formData = new FormData(form);
                var file = $('input[type=file]')[0].files[0];
                formData.append("Picture", file);
                var id = $("#Id").val();
                if (id) {
                    formData.append("Id", id); // Thêm Id vào formData
                }

                var groupId = $("#GroupId").val(); // Đảm bảo lấy đúng giá trị
                formData.append("GroupId", groupId);  // Thêm groupId vào formData
                console.log("Dữ liệu formData trước khi gửi:");
                for (var pair of formData.entries()) {
                    console.log(pair[0] + ': ' + pair[1]);
                }
                $.ajax({
                    data: formData,
                    url: "/Admin/Member/Save",
                    type: "POST",
                    processData: false,
                    contentType: false,
                    success: function (item) {
                        $("#modal-default").modal('hide');
                        toastr.success("Thông báo: Lưu thành công !!");
                        items.ajax.reload();
                    },
                    error: function () {
                        toastr.error("Lỗi: Không có quyền truy cập chức năng này.");
                    }
                })
            })
            $(document).on('click', "a.btnDelete", function () {
                let id = $(this).data("id");
                Swal.fire({
                    title: 'Bạn chắc không?',
                    text: "Xóa không thể phục hồi được !",
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Xác nhận',
                    cancelButtonText: 'Hủy'
                }).then(function (result) {
                    if (result.isConfirmed) {
                        $.get("/Admin/Member/Delete",
                            {
                                id: id
                            }, function (data) {
                                if (data == true) {
                                    toastr.success('Thông báo: Xóa người dùng thành công.');
                                    items.ajax.reload();
                                } else {
                                    toastr.error('Lỗi: Kiểm tra lại ràng buộc toàn vẹn của người dùng.')
                                }
                            }).fail(function () {
                                toastr.error("Lỗi: Không có quyền truy cập chức năng này.");
                            })
                    }
                })
            })
        });
    </script>
}
